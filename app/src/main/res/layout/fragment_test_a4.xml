<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestFragments.Test_a4">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/a4_inst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Now, I will ask you to count by subtracting seven from 100, and then, keep subtracting seven from your answer until I tell you to stop."
            android:textColor="#000000"
            android:textSize="25dp" />


        <Button
            android:id="@+id/a4_button"
            android:layout_width="195dp"
            android:layout_height="87dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a4_inst" />




    </android.support.constraint.ConstraintLayout>


